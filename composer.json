{
  "name": "lts/php-book-markdown-tools",
  "description": "Tools for processing markdown, especially targeted towards book authorship",
  "keywords": [
    "markdown",
    "authorship"
  ],
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Joseph Edmonds",
      "email": "info@ltscommerce.dev"
    }
  ],
  "require": {
    "php": ">= 8.0.1",
    "thecodingmachine/safe": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "LTS\\MarkdownTools\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LTS\\MarkdownTools\\Test\\": "tests/"
    }
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^9.5",
    "phpmd/phpmd": "dev-master@dev",
    "edmondscommerce/phpqa": "dev-php8@dev"
  },
  "minimum-stability": "stable",
  "config": {
    "bin-dir": "bin"
  },
  "bin": [
    "bin/processMarkdown"
  ]
}
